{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@fs/coding-management": [
        "libs/coding-management/src/index.ts"
      ],
      "@fs/coding-management/*": [
        "libs/coding-management/*/src/index.ts"
      ],
      "@fs/theme.core": [
        "themes/theme-core/src/index.ts"
      ],
      "@fs/theme.core/*": [
        "themes/theme-core/*/src/index.ts"
      ],
      "@fs/setting-management": [
        "libs/setting-management/src/index.ts"
      ],
      "@fs/setting-management/*": [
        "libs/setting-management/*/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
